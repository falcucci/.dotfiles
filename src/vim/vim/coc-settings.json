{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src/",
        "paths": {
            "*": ["*"]
        }
    },
    "exclude": ["node_modules", "**/node_modules/*"],
    "coc.preferences.diagnostic.enable": false,
    "tsserver.orgnizeImportOnSave": true,
    "suggest.autoTrigger": "always", // "trigger"
    "languageserver": {
        "ruff-lsp": {
            "command": "ruff-lsp",
            "filetypes": ["python"]
        },
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
        }
    },
    "coc.preferences.jumpCommand": "tab drop",
    "tsserver.reportStyleChecksAsWarnings": false,
    "javascript.suggestionActions.enabled": false,
    "snippets.ultisnips.usePythonx": false,
    "tsserver.disableAutomaticTypeAcquisition": false,
    "rust-analyzer.completion.autoimport.enable": true,
    "rust-analyzer.imports.granularity.group": "crate",
    "rust-analyzer.server.path": "/usr/local/bin/rust-analyzer"
}
